<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox spacing="5" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.netflix.HelloController">
   <children>
      <VBox prefHeight="602.0" prefWidth="400" minWidth="300">
         <children>
            <Label fx:id="favoritesTitleLabel" layoutX="10.0" layoutY="278.0" prefHeight="18.0" prefWidth="150.0" text="Favourite Movies:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </Label>
            <ListView fx:id="favoritesList" prefHeight="165.0" prefWidth="476.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </ListView>
            <TextField fx:id="emailTxt" promptText="email">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="movieTxt" onAction="#onActionMovieTxt" promptText="Moive">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#add" text="Add">
                     <HBox.margin>
                        <Insets left="5.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#remove" text="Remove">
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="confirmEmail" mnemonicParsing="false" onAction="#onActionConfirmEmail" text="confirm">
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="errorLabel" prefHeight="18.0" prefWidth="150.0" />
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="432.0"  minWidth="400" HBox.hgrow="ALWAYS">
         <children>
            <TableView fx:id="movieTableView" prefWidth="428.0">
              <columns>
                <TableColumn fx:id="movieIdColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="movieNameColumn" prefWidth="175" text="Name" />
                  <TableColumn fx:id="movieGenreColumn" prefWidth="75.0" text="Genre" />
                  <TableColumn fx:id="movieLengthColumn" prefWidth="75.0" text="Length" />
                  <TableColumn fx:id="movieDescriptionColumn" prefWidth="125.0" text="description" />
              </columns>
               <VBox.margin>
                  <Insets right="5.0" top="18.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
   </children>
</HBox>
